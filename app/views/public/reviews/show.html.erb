<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-6 offset-1">
        <h5>レビュー詳細</h5>
        <table class="table table-borderess">
          <tbody>
            <tr>
              <td>投稿者</td>
              <td>
                <%= link_to end_user_path(@review.end_user.id) do %>
                  <%= @review.end_user.nickname %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>番組名</td>
              <td><%= @review.content_name %></td>
            </tr>
            <tr>
              <td>出演者</td>
              <td><%= @review.cast %></td>
            </tr>
            <tr>
              <td>性別</td>
              <td><%= @review.gender %></td>
            </tr>
            <tr>
              <td>評価</td>
              <td>
                <div id="star-rate-<%= @review.id %>"></div>
                  <script>
                  $('#star-rate-<%= @review.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= @review.rate %>,
                  });
                  </script>
              </td>
            </tr>
            <tr>
              <td class="text-nowrap">レビュー　</td>
              <td><%= @review.body %></td>
            </tr>
              <td>
                <% if @review.end_user.id == current_end_user.id %>
                  <%= link_to "編集", edit_review_path(@review.id), class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @review.end_user.id == current_end_user.id %>
                  <%= link_to "削除", review_path(@review.id), method: :delete, data: { confirm: '本当に削除しますか？', cancel: 'やめる', commit: 'はい'}, title: 'レビュー削除確認', class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            <tr>
          <tbody>
        </table>
        <div class="comments">
          <div id="comments_buttons_<%= @review.id %>">
            <%= render partial: 'public/comments/comment', locals: { review: @review } %>
          </div>
        </div>
        <div class="new-comment">
        <%= form_with(model:[@review, @comment]) do |f| %>
          <%= f.text_area :body, size: "40x3", placeholder:'ここにコメントを書いて投稿してください。(30字以内)' %>
          <%= f.submit "送信", class:"btn btn-sm btn-success" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
