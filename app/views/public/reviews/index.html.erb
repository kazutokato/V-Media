<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-10 offset-1">
      <h5>レビュー 一覧</h5>
      <table class="table table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>投稿ユーザー</th>
            <th>番組名</th>
            <th>投稿者評価</th>
            <th>リアクション</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= link_to end_user_path(review.end_user.id) do %>　
                  <%= attachment_image_tag review.end_user, :profile_image, fallback: "no_image_end_user.png", size: '30x30' %>
                <% end %>
              </td>
              <td><%= review.end_user.nickname %></td>
              <td>
                <%= link_to review_path(review.id) do %>
                  <%= review.content_name %>
                <% end %>
              </td>
              <td>
                <div id="star-rate-<%= review.id %>"></div>
                  <script>
                  $('#star-rate-<%= review.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= review.rate %>,
                  });
                  </script>
              </td>
              <td>いいね数: <%= review.favorites.count %></td>
              <td>コメント数: <%= review.comments.count %></td>
            <tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>