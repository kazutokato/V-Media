<div class="container">
  <div class="row">
    <div class="col-10 offset-2">
      <h5 class="contact-form">お問い合わせフォーム</h5>
    </div>
  </div>
  <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :name, 'お名前', class:'col-md-2 offset-md-2 col-form-label' %>
      <div class="col-md-5">
        <%= f.text_field :name, placeholder:"お名前を入力" %></td>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class:'col-md-2 offset-md-2 col-form-label' %>
      <div class="col-md-5">
        <%= f.text_field :email, placeholder:"連絡先アドレスを入力" %></td>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :body, 'お問い合わせ内容', class:'col-md-2 offset-md-2 col-form-label' %>
      <div class="col-md-6">
        <%= f.text_area :body, placeholder:"お問い合わせ内容を入力", size:"40x3" %></td>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-2 offset-md-2 col-form-label"></div>
      <div class="col-md-3">
        <%= f.submit '内容確認へ', class:"submit-button " %>
      </div>
    </div>
  <% end %>
</div>
