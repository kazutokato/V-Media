<!DOCTYPE html>
<html>
  <head>
    <title>VMedia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
      <nav class="navbar navbar-expand-lg navbar-info bg-active">
        <div class="container">
          <a class="navbar-brand p-3" href="/">V-Media</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <% if end_user_signed_in? %>
                    <li class="nav-item">
                      <%= link_to 'レビュー一覧', end_user_path(current_end_user.id), class:"nav-link btn btn-sm btn-outline ml-5"  %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'マイページ', end_user_path(current_end_user.id), class:"nav-link btn btn-sm btn-outline ml-5"  %>
                    </li>
                    <li class="nav-item">
                      <%= link_to '新規投稿', new_review_path, class:"nav-link btn btn-sm btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'お問い合わせ', new_contact_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                  <% elsif admin_signed_in? %>
                    <li class="nav-item">
                      <%= link_to 'レビュー一覧', admin_reviews_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'ユーザー一覧', admin_end_users_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'お問い合わせ一覧', admin_contacts_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'カテゴリー追加', admin_review_categories_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%= link_to 'サイト概要', about_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'レビュー一覧', reviews_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'お問い合わせ', new_contact_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to '新規登録', new_end_user_registration_path, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'ログイン', end_user_session_path, method: :post, class:"nav-link btn btn-sm  btn-outline ml-5" %>
                    </li>
                  <% end %>
                </ul>
              </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
  </body>
</html>
